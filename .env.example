# Stack Auth Configuration
NEXT_PUBLIC_STACK_PROJECT_ID=your_stack_project_id_here
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_publishable_key_here
STACK_SECRET_SERVER_KEY=your_secret_key_here

# OpenAI API Key (REQUIRED for AI code analysis)
OPENAI_API_KEY=your_openai_api_key_here

# GitHub Token (REQUIRED for repo access)
# Create at: https://github.com/settings/tokens
# Permissions needed: repo (all), read:packages
GITHUB_TOKEN=your_github_personal_access_token_here

# Vercel Token (optional - for deployment)
VERCEL_TOKEN=your_vercel_token_here

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# Database (optional - for production)
DATABASE_URL=postgresql://user:password@host:5432/ghostcommit
